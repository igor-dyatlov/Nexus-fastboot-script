#!/bin/bash

function occam-JDQ39 {
JDQ39="occam-jdq39-factory-345dc199.tgz"
  if [ -f "$JDQ39" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf occam-jdq39*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd occam-jdq39
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf occam-jdq39*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/occam-jdq39-factory-345dc199.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf occam-jdq39*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd occam-jdq39
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf occam-jdq39*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

