# Nexus 4
function images-occam {
  eval `resize`
  NEXUS4=$(whiptail \
    --notags \
    --title 'Nexus 4' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    occam-JDQ39 'Jelly Bean 4.2.2' \
    occam-JWR66Y 'Jelly Bean 4.3' \
    occam-KRT16S 'KitKat 4.4' \
    occam-KTU84P 'KitKat 4.4.4' \
    occam-LRX21T 'Lollipop 5.0' \
    occam-LMY48T 'Lollipop 5.1.1' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS4
  else
    clear && main
  fi
}
