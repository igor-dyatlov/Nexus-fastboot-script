#!/bin/bash

function yakju-IMM76I {
IMM76I="yakju-imm76i-factory-8001e72f.tgz"
  if [ -f "$IMM76I" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf yakju-imm76i*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd yakju-imm76i
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf yakju-imm76i*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/yakju-imm76i-factory-8001e72f.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf yakju-imm76i*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd yakju-imm76i
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf yakju-imm76i*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

