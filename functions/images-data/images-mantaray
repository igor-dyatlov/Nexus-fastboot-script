#!/bin/bash

function mantaray-JDQ39 {
JDQ39="mantaray-jdq39-factory-d79f489e.tgz"
  if [ -f "$JDQ39" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf mantaray-jdq39*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd mantaray-jdq39
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf mantaray-jdq39*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/mantaray-jdq39-factory-d79f489e.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf mantaray-jdq39*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd mantaray-jdq39
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf mantaray-jdq39*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

