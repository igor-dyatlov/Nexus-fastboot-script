# Nexus 9 (Wi-Fi)
function images-volantis {
  eval `resize`
  NEXUS9W=$(whiptail \
    --notags \
    --title 'Nexus 9 (Wi-Fi)' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    volantis-LRX21R 'Lollipop 5.0' \
    volantis-LRX22L 'Lollipop 5.0.2' \
    volantis-LMY48T 'Lollipop 5.1.1' \
    volantis-MRA58N 'Marshmallow 6.0' \
    volantis-MOB30W 'Marshmallow 6.0.1' \
    volantis-NRD90M 'Nougat 7.0' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS9W
  else
    clear && main
  fi
}
