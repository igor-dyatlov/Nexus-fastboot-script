#!/bin/bash

function hammerhead-KRT16M {
KRT16M="hammerhead-krt16m-factory-bd9c39de.tgz"
  if [ -f "$KRT16M" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf hammerhead-krt16m*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd hammerhead-krt16m
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf hammerhead-krt16m*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/hammerhead-krt16m-factory-bd9c39de.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf hammerhead-krt16m*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd hammerhead-krt16m
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf hammerhead-krt16m*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

