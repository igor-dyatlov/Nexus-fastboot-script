function fugu-LRX21V {
  # Download
  show_info 'Download Factory Images...'
  curl -O https://dl.google.com/dl/android/aosp/fugu-lrx21v-factory-64050f47.tgz
  show_info 'Extraction Factory Images...'
  tar zxf fugu*.tgz
  show_info 'Install Factory Images...'
  show_warning ' '
  cd fugu-lrx21v
  ./flash-all.sh
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
  images
}

function fugu-LMY48N {
  # Download
  show_info 'Download ...'
  curl -O https://dl.google.com/dl/android/aosp/fugu-lmy48n-factory-3b9d8638.tgz
  show_info 'Extraction f...'
  tar zxf fugu*.tgz
  cd fugu-lmy48n
