#!/bin/bash

function ryu-MXC89H {
MXC89H="ryu-mxc89h-factory-f4c33d9c.tgz"
  if [ -f "$MXC89H" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf ryu*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd ryu-mxc14g
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf ryu*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/ryu-mxc89h-factory-f4c33d9c.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf ryu*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd ryu-mxc14g
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf ryu*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

# Pixel C
function images-ryu {
  eval `resize`
  NEXUS5X=$(whiptail \
    --notags \
    --title 'Pixel C' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    ryu-MXC89H 'Marshmallow 6.0.1' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $PIXELC
  else
    clear && main
  fi
}
