# Nexus 7
function images-razorg {
  eval `resize`
  NEXUS7M=$(whiptail \
    --notags \
    --title 'Nexus 7 [2013] (Mobile)' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    razorg-JSS15R 'Jelly Bean 4.3' \
    razorg-KRT16S 'KitKat 4.4' \
    razorg-KTU84P 'KitKat 4.4.4' \
    razorg-LRX21P 'Lollipop 5.0' \
    razorg-LRX22G 'Lollipop 5.0.2' \
    razorg-LMY48T 'Lollipop 5.1.1' \
    razorg-MRA59B 'Marshmallow 6.0' \
    razorg-MOB30X 'Marshmallow 6.0.1' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS7M
  else
    clear && main
  fi
}
