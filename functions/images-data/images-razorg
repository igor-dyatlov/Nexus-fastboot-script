#!/bin/bash

function razor-JSS15R {
JSS15R="razor-jss15r-factory-ec2d4f76.tgz"
  if [ -f "$JSS15R" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf razor-jss15r*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd razor-jss15r
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf razor-jss15r*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/razor-jss15r-factory-ec2d4f76.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf razor-jss15r*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd razor-jss15r
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf razor-jss15r*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

