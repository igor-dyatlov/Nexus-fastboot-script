# Nexus 5
function images-hammerhead {
  eval `resize`
  NEXUS5=$(whiptail \
    --notags \
    --title 'Nexus 5' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    hammerhead-KRT16M 'KitKat 4.4' \
    hammerhead-KTU84P 'KitKat 4.4.4' \
    hammerhead-LRX21O 'Lollipop 5.0' \
    hammerhead-LMY48M 'Lollipop 5.1.1' \
    hammerhead-MRA58N 'Marshmallow 6.0' \
    hammerhead-MOB30Y 'Marshmallow 6.0.1' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS5
  else
    clear && main
  fi
}
