# Nexus 10
function images-mantaray {
  eval `resize`
  NEXUS10=$(whiptail \
    --notags \
    --title 'Nexus 10' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    mantaray-JDQ39 'Jelly Bean 4.2.2' \
    mantaray-JWR66Y 'Jelly Bean 4.3' \
    mantaray-KRT16S 'KitKat 4.4' \
    mantaray-KTU84P 'KitKat 4.4.4' \
    mantaray-LRX21PLRX21P 'Lollipop 5.0' \
    mantaray-LMY49J 'Lollipop 5.1.1' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS10
  else
    clear && main
  fi
}
