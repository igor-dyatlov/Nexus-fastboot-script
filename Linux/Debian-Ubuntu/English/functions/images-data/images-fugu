# Nexus Player
function images-fugu {
  eval `resize`
  NEXUSPLAY=$(whiptail \
      --notags \
      --title "Nexus Player" \
      --menu "\nFor what device you want to flash the recovery?" \
      --ok-button "Install" \
      --cancel-button "Go Back" \
      $LINES $COLUMNS $(( $LINES - 12 )) \
        "fugu-LRX21V"         "Lollipop 5.0" \
        "fugu-LMY48N"         "Lollipop 5.1.1" \
        "fugu-MRA58N"         "Marshmallow 6.0.0" \
        "fugu-MMB29U"         "Marshmallow 6.0.1" \
        3>&1 1>&2 2>&3)

    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        clear && $NEXUSPLAY
    else
        clear && main
    fi
}
