# TWRP
function cm {
    eval `resize`
    CM=$(whiptail \
        --notags \
        --title "TeamWin - TWRP" \
        --menu "\nFor what device you want to flash the recovery?" \
        --ok-button "Install" \
        --cancel-button "Go Back" \
        $LINES $COLUMNS $(( $LINES - 12 )) \
        "cm-ryu"            "Pixel C" \
        "cm-angler"         "Nexus 6P" \
        "cm-bullhead"       "Nexus 5X" \
        "cm-shamu"          "Nexus 6" \
        "cm-fugu"           "Nexus Player" \
        "cm-flounder"       "Nexus 9 (Wi-Fi)" \
        "cm-flounder-lte"   "Nexus 9 (Mobile)" \
        "cm-hammerhead"     "Nexus 5" \
        "cm-hammerheadcaf"  "Nexus 5 (CAF)" \
        "cm-flo"            "Nexus 7 [2013] (Wi-Fi)" \
        "cm-deb"            "Nexus 7 [2013] (Mobile)" \
        "cm-manta"          "Nexus 10" \
        "cm-mako"           "Nexus 4" \
        "cm-grouper"        "Nexus 7 (Wi-Fi)" \
        "cm-tilapia"        "Nexus 7 (Mobile)" \
        "cm-maguro"         "Galaxy Nexus (GSM/HSPA+)" \
        3>&1 1>&2 2>&3)

    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        clear && $CM
    else
        clear && main
    fi
}
