#!/bin/bash

function volantis-LRX21R {
LRX21R="volantis-lrx21r-factory-ac87eba2.tgz"
  if [ -f "$LRX21R" ]; then
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf volantis-lrx21r*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd volantis-lrx21r
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf volantis-lrx21r*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  else
    # Download
    show_info 'Download Factory Images...'
    wget https://dl.google.com/dl/android/aosp/volantis-lrx21r-factory-ac87eba2.tgz
    # Extract
    show_info 'Extraction Factory Images...'
    tar zxf volantis-lrx21r*.tgz
    # Install
    show_info 'Install Factory Images...'
    cd volantis-lrx21r
    ./flash-all.sh
    # Timeout
    sleep 5
    # Back
    cd -
    # Cleanup and finish
    rm -rf volantis-lrx21r*
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
    images
  fi
}

