# Galaxy Nexus (GSM/HSPA+)
function images-yakju {
  eval `resize`
  NEXUS3=$(whiptail \
    --notags \
    --title 'Galaxy Nexus (GSM/HSPA+)' \
    --menu '\nWhat is the firmware version you want to install?' \
    --ok-button 'Install' \
    --cancel-button 'Go Back' \
  $LINES $COLUMNS $(( $LINES - 12 )) \
    yakju-IMM76I 'Ice Cream Sandwich 4.0.4 ' \
    yakju-JZO54K 'Jelly Bean 4.1.2 ' \
    yakju-JDQ39 'Jelly Bean 4.2.2 ' \
    yakju-JWR66Y 'Jelly Bean 4.3' \
  3>&1 1>&2 2>&3)

exitstatus=$?
  if [ $exitstatus = 0 ]; then
    clear && $NEXUS3
  else
    clear && main
  fi
}
