#!/bin/bash

dir="$(dirname "$0")"

source $dir/functions/images-data/angler
source $dir/functions/images-data/bullhead
source $dir/functions/images-data/fugu
source $dir/functions/images-data/hammerhead
source $dir/functions/images-data/mantaray
source $dir/functions/images-data/nakasi
source $dir/functions/images-data/nakasig
source $dir/functions/images-data/occam
source $dir/functions/images-data/razor
source $dir/functions/images-data/razorg
source $dir/functions/images-data/ryu
source $dir/functions/images-data/shamu
source $dir/functions/images-data/takju
source $dir/functions/images-data/volantis
source $dir/functions/images-data/volantisg
source $dir/functions/images-data/yakju

